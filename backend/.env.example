# ExchAInge Backend Environment Variables
# Copy this file to .env and fill in your actual values


# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# Privy Authentication
# Get your credentials from https://console.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
NEXT_PUBLIC_PRIVY_CLIENT_ID=your_privy_client_id

# Blockchain Configuration
# Solana RPC URL - use devnet for development, mainnet for production
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# X402 Agent Configuration (Optional)
# Required if running the autonomous trading agent
AGENT_WALLET_PRIVATE_KEY=your_solana_private_key_here
AGENT_ACCESS_TOKEN=your_privy_access_token
API_BASE_URL=http://localhost:4000
AGENT_MAX_PRICE=1600
# AGENT_TARGET_DATASET_ID=dataset_id_here

# Database Configuration (Optional - only if using local PostgreSQL)
# If using Supabase, these are not needed

# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DB=exchainge
# POSTGRES_PORT=5432
# DATABASE_URL=postgresql://postgres:password@localhost:5432/exchainge

# Redis Configuration (Optional - for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PORT=6379

# Cloudflare R2 Storage (Optional - for file uploads)
# R2_ACCOUNT_ID=your_cloudflare_account_id
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=exchainge-uploads

# Email/Notifications (Optional)
# SENDGRID_API_KEY=your_sendgrid_key
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_password

# Security & Rate Limiting (Optional)
# JWT_SECRET=your_random_secret_key_here
# API_RATE_LIMIT=100
# SESSION_SECRET=another_random_secret

# Analytics & Monitoring (Optional) 
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXXX
 
# Development Tools
NEXT_TELEMETRY_DISABLED=1
